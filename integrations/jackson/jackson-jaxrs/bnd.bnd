Bundle-Activator: org.apache.aries.jax.rs.jackson.JaxbJsonBundleActivator

-conditionalpackage: org.apache.aries.component.dsl.*
-contract: *

Provide-Capability: \
	osgi.service;\
		objectClass:List<String>="javax.ws.rs.ext.MessageBodyReader,javax.ws.rs.ext.MessageBodyWriter";\
		osgi.jaxrs.media.type=application/json
Require-Capability: \
	osgi.implementation;\
		osgi.implementation=osgi.jaxrs;\
		filter:="(&(osgi.implementation=osgi.jaxrs)(version>=1.0.0)(!(version>=2.0.0)))"